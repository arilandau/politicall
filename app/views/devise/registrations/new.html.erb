<div class="container">
<div class="row">
  <h3 align="center">Welcome!</h3>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :first_name, 'First Name', class: 'input-group-label' %>
      <%= f.text_field :first_name, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :last_name, 'Last Name', class: 'input-group-label' %>
      <%= f.text_field :last_name, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :username, class: 'input-group-label' %>
      <%= f.text_field :username, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :email, class: 'input-group-label' %>
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :password, class: 'input-group-label' %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :password_confirmation, "Password Confirmation", class: 'input-group-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
  <div class="row" align="center">
    <div class = "small-offset-3 small-6 columns">
      <%= f.submit "Join" %>
    </div>
  </div>
<% end %>
</div>
